{% extends 'base.html.twig' %}

{% block title %}View data{% endblock %}

{% block body %}
    <table>
        <tr>
            <th>id</th>
            <th>nume</th>
            <th>culoare</th>
            <th>marime</th>
            <th>pret</th>
            <th colspan="3">Actions</th>
        </tr>
        {% for key in flowers %}
            <tr>
                <td>{{ key.id }}</td>
                <td>{{ key.nume }}</td>
                <td>{{ key.culoare }}</td>
                <td> {{ key.marime }}</td>
                <td>{{ key.pret }}</td>
                <td><a href="{{  app.request.baseUrl() }}/show/{{key.id}}">View</a></td>
                <td> <a href="{{  app.request.baseUrl() }}/edit/{{key.id}}">Edit</a></td>
                <td><a href="{{  app.request.baseUrl() }}/delete/{{key.id}}" onclick="return confirm('Are you sure you want to delete this item?');">Delete</a></td>

            </tr>
        {% endfor %}
    </table>
    <a href="{{  app.request.baseUrl() }}/data/add">Insert a record</a>
{% endblock %}

